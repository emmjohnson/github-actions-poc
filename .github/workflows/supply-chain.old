---
name: supply-chain

on:
  push:
    branches:
      - main

jobs:
  release:
    runs-on: ubuntu-latest
    steps:
      - name: Check out source code
        uses: actions/checkout@v2
        with:
          fetch-depth: 0

      - name: Set up Go
        uses: actions/setup-go@v2
        with:
          go-version: 1.19

      - name: Test
        run: go test ./...

      - name: Build Image
        id: build
        uses: garethjevans/build-image@v1
        with:
          destination: gcr.io/org/project
          tag: latest
          context: .

      - name: Scan Image
        uses: tap-actions/scan-image@v1
        with:
          image: ${steps.build.outputs.name}

      - name: Build PodSpec
        uses: tap-actions/build-podspec@v1
        with:
          image: ${steps.build.outputs.name}
